<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_20_transparent"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/frameLayoutRoot">

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"
        android:background="@color/white"
        android:layout_width="300dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="23dp"
            android:layout_gravity="center"
            android:text="@string/ar_input_length_unit"
            android:textSize="7pt"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:layout_gravity="center_vertical"
            android:dropDownWidth="80dp"
            android:background="@null"
            android:id="@+id/spinnerUnit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/ar_popup_input_name_title"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="23dp"
            android:textSize="7pt"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:padding="5dp"
            android:background="@drawable/ar_input_name_bg"
            android:id="@+id/editTextName"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textSize="6pt"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/ar_popup_input_area"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="23dp"
            android:textSize="7pt"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:padding="5dp"
            android:background="@drawable/ar_input_name_bg"
            android:id="@+id/editTextArea"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textSize="6pt"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:background="@drawable/round_corner_white_bg"
            android:textSize="6.75pt"
            android:textColor="@color/black"
            android:text="@string/ar_popup_confirm"
            android:id="@+id/buttonConfirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </LinearLayout>
</FrameLayout>